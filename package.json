{
  "name": "movies-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint && yarn lint:css && yarn lint:prettier",
    "lint:css": "stylelint --fix '**/*.scss' --allow-empty-input",
    "lint:prettier": "prettier --write . --loglevel silent",
    "pre-push": "node scripts/pre-push.js",
    "prepare": "husky install",
    "start": "next start",
    "test": "yarn test:unit:watch && yarn test:integration:watch",
    "test:ci": "yarn test:unit && yarn test:integration",
    "test:unit": "TZ=UTC jest -c jest.config.unit.js --ci",
    "test:unit:watch": "yarn test:unit --watch",
    "test:integration": "TZ=UTC jest -c jest.config.integration.js --ci",
    "test:integration:watch": "yarn test:integration --watch",
    "type-check": "yarn tsc --noEmit",
    "type-check:watch": "yarn type-check --incremental --watch"
  },
  "dependencies": {
    "@types/node": "20.10.0",
    "@types/react": "18.2.39",
    "@types/react-dom": "18.2.17",
    "awilix": "9.0.0",
    "axios": "1.6.2",
    "eslint": "8.54.0",
    "lodash": "4.17.21",
    "next": "14.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.10",
    "@types/lodash": "4.14.202",
    "@typescript-eslint/eslint-plugin": "6.13.0",
    "colors": "1.4.0",
    "cross-spawn": "7.0.3",
    "eslint": "8.54.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-mock-extended": "3.0.5",
    "knip": "3.0.2",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "sass": "1.69.5",
    "stylelint": "15.11.0",
    "stylelint-config-recommended-scss": "13.1.0",
    "stylelint-order": "6.0.3"
  }
}
